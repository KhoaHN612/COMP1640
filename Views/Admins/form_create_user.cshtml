@model COMP1640.Areas.Identity.Data.COMP1640User
@{
    Layout = "~/Views/Shared/_Layout_Manager_Table.cshtml";
}

<!--start content-->
<main class="page-content">
    <!--breadcrumb-->
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Forms</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a asp-controller="Managers" asp-action="index"><i class="bx bx-home-alt"></i></a></li>
                    <li class="breadcrumb-item active"><a asp-controller="Managers" asp-action="TableUser">List User</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Create User </li>
                </ol>
            </nav>
        </div>
    </div>
    <!--end breadcrumb-->
    <div class="row">
        <div class="col-xl-9 mx-auto">
            <h6 class="mb-0 text-uppercase">Create User Form</h6>
            <hr />
            <div class="card">
                <div class="card-body">
                    <div class="border p-4 rounded">
                        <!-- Start of form -->
                        <form asp-action="FormCreateUser" method="post" enctype="multipart/form-data">
                            <div class="card-title d-flex align-items-center">
                                <h5 class="mb-0">User Registration</h5>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <hr />
                            <!-- Name Input -->
                            <div class="row mb-3">
                                <label asp-for="FullName" class="col-sm-3 col-form-label">
                                    Full Name
                                </label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" asp-for="FullName"
                                           placeholder="Enter Full Name">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="Email" class="col-sm-3 col-form-label">
                                    Email
                                </label>
                                <div class="col-sm-9">
                                    <input type="email" class="form-control" asp-for="Email"
                                           placeholder="Enter you email">
                                </div>
                            </div>
                            <!-- Email Address Input -->
                            <div class="row mb-3">
                                <label asp-for="Address" class="col-sm-3 col-form-label">
                                    Address
                                </label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" asp-for="Address"
                                           placeholder="Enter Address here" value="Unknown">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="DayOfBirth" class="col-sm-3 col-form-label">
                                    Date of Birth
                                </label>
                                <div class="col-sm-9">
                                    <input type="date" class="form-control" asp-for="DayOfBirth"
                                            placeholder="">
                                </div>
                                <script>
                                    document.getElementById('DayOfBirth').valueAsDate = new Date();
                                </script>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="FacultyId" class="col-sm-3 col-form-label">Faculty</label>
                                <div class="col-sm-9">
                                    <select asp-for="FacultyId" asp-items="@ViewBag.FacultyId" class="col-sm-9 form-control">
                                        <option disabled selected> -- Select a faculty -- </option>
                                    </select>
                                </div> 
                            </div>
                            <input type="hidden" asp-for="ProfileImagePath" value="Waiting">
                            <div class="row mb-3">
                                <label asp-for="PhoneNumber" class="col-sm-3 col-form-label">
                                    Phone Number
                                </label>
                                <div class="col-sm-9">
                                    <input type="number" class="form-control" asp-for="PhoneNumber" placeholder="Enter your phone number">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputPassword" class="col-sm-3 col-form-label">
                                    Password
                                </label>
                                <div class="col-sm-9">
                                    <input type="password" class="form-control" id="inputPassword"
                                           name="Password" placeholder="Enter your password ">
                                </div>
                            </div>
                            @* <div class="row mb-3">
                                <label for="inputPhone2" class="col-sm-3 col-form-label">
                                    Image
                                </label>
                                <div class="col-sm-9">
                                    <input type="file" class="form-control" id="inputPhone2"
                                           name="file" placeholder="Choose your Image">
                                </div>
                            </div> *@
                            <div class="row mb-3">
                                <label for="inputRole2" class="col-sm-3 col-form-label">
                                    Role
                                </label>
                                <div class="col-sm-9">
                                    @foreach (var role in ViewBag.Roles)
                                    {
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="Role" id="@role.Name" value="@role.Id">
                                            <label class="form-check-label" for="@role.Name"> @role.Name </label>
                                        </div>
                                    }
                                </div>
                            </div>
                            <!-- Submit Button -->
                            <div class="row">
                                <label class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9">
                                    <button type="submit" class="btn btn-primary px-5">Submit</button>
                                </div>
                            </div>
                        </form>
                        <!-- End of form -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--end row-->
</main>
<!--end page main-->