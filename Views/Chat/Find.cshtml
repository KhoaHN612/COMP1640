@using Microsoft.AspNetCore.Identity
@using COMP1640.Areas.Identity.Data
@inject UserManager<COMP1640User> UserManager
@model IEnumerable<COMP1640.Areas.Identity.Data.COMP1640User>
@{
    Layout = "~/Views/Shared/_Layout_Manager_Table.cshtml";
}


<!--start content-->
<main class="page-content">
    <!--breadcrumb-->
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Tables</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a asp-controller="Managers" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">List Submission Date</li>
                </ol>
            </nav>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col d-flex justify-content-end">
            <a asp-action="FormCreateUser" asp-controller="Admins" type="button" class="btn btn-info px-5"><i
                    class="bi bi-plus"></i> Create new</a>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="example2" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Faculty</th>
                            <th>Address</th>
                            <th>Date Of Birth</th>
                            <th>Chat</th>
                            @* <th>Actions</th> *@
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>@user.Faculty?.Name
                                </td>
                                <td class="text-ellipsis">@user.Address</td>
                                <td>@user.DayOfBirth</td>
                                <td>
                                    <a asp-controller="Chat" asp-action="Chatwith" asp-route-id="@user.Id">Chat</a>
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>No</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Faculty</th>
                            <th>Address</th>
                            <th>Date Of Birth</th>
                            <th>Chat</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</main>
<!--end page main-->
<style>
    .text-ellipsis {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }
</style>