@model COMP1640.Areas.Identity.Data.COMP1640User
@{
    Layout = "~/Views/Shared/_Layout_Manager_Table.cshtml";
}

<!--start content-->
<main class="page-content">

    <!--breadcrumb-->
    <div class="page-breadcrumb d-none d-sm-flex align-items-center">
        <div class="breadcrumb-title pe-3 text-white">Pages</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="javascript:;"><i class="bx bx-home-alt text-white"></i></a>
                    </li>
                    <li class="breadcrumb-item active text-white" aria-current="page">User Profile</li>
                </ol>
            </nav>
        </div>
    </div>
    <!--end breadcrumb-->

    <div class="profile-cover bg-dark"></div>

    <div class="row">
        <div class="col-12 col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="mb-0">My Account</h5>
                    <hr>
                    <form action="your-server-endpoint" method="POST">
                        <!-- Add action and method according to your requirements -->
                        <div class="card shadow-none border">
                            <div class="card-header">
                                <h6 class="mb-0">USER INFORMATION</h6>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-6">
                                        <label class="form-label">Full Name</label>
                                        <input type="text" class="form-control" name="fullName" value="@Model.FullName"
                                            disabled>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">Faculty</label>
                                        <input type="text" class="form-control" name="faculty"
                                            value="@ViewBag.facultyName" disabled>
                                        <!-- Changed type to email for validation -->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card shadow-none border">
                            <div class="card-header">
                                <h6 class="mb-0">CONTACT INFORMATION</h6>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <label class="form-label">Date Of Birth</label>
                                        <input disabled type="datetime" class="form-control" name="dateOfBirth"
                                            value="@Model.DayOfBirth">
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label">Address</label>
                                        <input disabled type="text" class="form-control" name="address"
                                            value="@Model.Address">
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label">Phone Number</label>
                                        <input disabled type="text" class="form-control" name="phoneNumber"
                                            value="@Model.PhoneNumber">
                                    </div>
                                </div>
                            </div>
                        </div>
                        @* <div class="text-start">
                        <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                        </div> *@
                    </form>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-4">
            <div class="card shadow-sm border-0 overflow-hidden">
                <div class="card-body">
                    <div class="profile-avatar text-center">

                        @{
                            var avatarImg = File.Exists($"/profileImageUpload/{Model.ProfileImagePath}")
                            ? $"/profileImageUpload/{Model.ProfileImagePath}"
                            : "/profileImageUpload/DefaultUser.png";
                        }

                        <img src="@avatarImg" alt="" class="rounded-circle shadow" width="120" height="120">

                        @* <img src="assets/images/avatars/avatar-1.png" class="rounded-circle shadow" width="120"
                        height="120" alt=""> *@
                    </div>
                    <div class="text-center mt-4">
                        <h4 class="mb-1">@Model.FullName</h4>
                        <p class="mb-0 text-secondary">
                            @foreach (var role in ViewBag.roles)
                            {
                            <p>@role </p>
                            }
                        </p>
                        <div class="mt-4"></div>
                    </div>
                    <hr>
                    @* <div class="text-start">
                    <h5 class="">About</h5>
                    <p class="mb-0">
                    It is a long established fact that a reader will be distracted by the readable content
                    of a page when looking at its layout. The point of using Lorem.
                    </div> *@
                </div>
            </div>
        </div>
    </div><!--end row-->

</main>
<!--end page main-->