@model IEnumerable<COMP1640.Models.Contribution>
@inject Microsoft.AspNetCore.Identity.UserManager<COMP1640.Areas.Identity.Data.COMP1640User> _userManager

@{
    Layout = "~/Views/Shared/_Layout_Students_Submission.cshtml";
}
 <style>
        .container {
            text-align: center;
        }
        .heading {
            color: navy;
        }
    </style>
<!--start content-->
<main class="page-content">
    <!--breadcrumb-->
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Tables</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a asp-controller="Students" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">List submission</li>
                </ol>
            </nav>
        </div>
    </div>
    <hr />
    <div class="card">
        <div class="card-body">
            <div class="container">
                <h3 class="heading">Publish Contributions</h3>
            </div>
            <div class="table-responsive">
                <table id="example2" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Contributions ID</th>
                            <th>Full Name</th>
                            <th>Title</th>
                            <th>Submission Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }
                        @foreach (var publishedContributions in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@publishedContributions.ContributionId</td>
                                @{
                                    // Kiểm tra xem contribution có null hay không trước khi truy cập thuộc tính UserId
                                    if (publishedContributions != null)
                                    {
                                        string userId = publishedContributions.UserId;
                                        var user = await _userManager.FindByIdAsync(userId);
                                        string fullName = user != null ? user.FullName : "Unknown";
                                        // Hiển thị FullName nếu contribution không null
                                        <td>@fullName</td>
                                    }
                                    else
                                    {
                                        // Nếu contribution là null, hiển thị thông báo "Unknown"
                                        <td>Unknown</td>
                                    }
                                }
                                <td>@publishedContributions.Title</td>
                                <td>@publishedContributions.SubmissionDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (publishedContributions.Status == "Pending")
                                    {
                                        <span class="badge bg-light-warning text-warning w-100">Pending</span>
                                    }
                                    else if (publishedContributions.Status == "Rejected")
                                    {
                                        <span class="badge bg-light-danger text-danger w-100">Rejected</span>
                                    }
                                    else if (publishedContributions.Status == "Approved")
                                    {
                                        <span class="badge bg-light-success text-success w-100">Approved</span>
                                    }
                                </td>
                                <td>
                                    <div class="table-actions d-flex align-items-center gap-3 fs-6">
                                        <a href="@Url.Action("DownloadContributionFiles", "Managers", new { id = publishedContributions.ContributionId })"
                                            class="text-danger" data-bs-toggle="tooltip" data-bs-placement="bottom"
                                            title="Download">
                                            <i class="lni lni-download"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>No</th>
                            <th>Contributions ID</th>
                            <th>Full Name</th>
                            <th>Title</th>
                            <th>Submission Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</main>
<!--end page main-->
