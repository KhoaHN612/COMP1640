@model COMP1640.Models.Contribution

<main class="page-content">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Forms</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a asp-controller="Managers" asp-action="IndexCooridinators"><i
                                class="bx bx-home-alt"></i></a></li>
                    <li class="breadcrumb-item active"><a asp-controller="Managers"
                            asp-action="StudentSubmissionCoordinators">List submission</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Make Comments</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-6 mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="border p-3 rounded">
                        <h6 class="mb-0 text-uppercase">Document Information</h6>
                        <hr />
                        <form class="row g-3" method="post">
                            <div class="col-6">
                                <label class="form-label"> Student Name</label>
                                <input type="text" class="form-control" readonly value="Đặng Minh Đạt">
                            </div>
                            <div class="col-6">
                                <label class="form-label">Student Email</label>
                                <input type="email" class="form-control" readonly value="datdmgcc210147@fpt.edu.vn">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="border p-3 rounded">
                        <h6 class="mb-0 text-uppercase">Preview Documentation/Image</h6>
                        <hr />
                        <div class="card text-wrap" style="height: 300px; overflow-y: auto;">
                            <!-- Placeholder for Document/Image Preview -->
                            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quisquam, quos,
                            doloremque, culpa, neque aliquid et doloribus non architecto obcaecati provident
                            molestias similique asperiores voluptatibus. Soluta, assumenda, voluptatum. Lorem
                            ipsum dolor sit amet, consectetur adipisicing elit. Tempore, dolore!
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6 mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="border p-3 rounded">
                        <h6 class="mb-0 text-uppercase">Comment Form</h6>
                        <hr />
                        <form class="row g-3" asp-action="UpdateComment" method="post">
                            <input type="hidden" asp-for="ContributionId" />
                            <div class="col-12">
                                <label class="form-label">Comment</label>
                                <input asp-for="Comment" class="form-control" />
                                <span asp-validation-for="Comment" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">Send</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
