
@{
    Layout = "~/Views/Shared/_Layout_Manager_Table.cshtml";
}

<!--start content-->
<main class="page-content">
    <!--breadcrumb-->
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Forms</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a asp-controller="Managers" asp-action="Index"><i class="bx bx-home-alt"></i></a></li>
                    <li class="breadcrumb-item active">
                        <a asp-controller="Managers" asp-action="TableSubmissionDate">
                            List Submission Date
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"] Date</li>
                </ol>
            </nav>
        </div>
    </div>
    <!--end breadcrumb-->
    <div class="row">
        <div class="col-xl-9 mx-auto">
            @* <h6 class="mb-0 text-uppercase">Horizontal Form</h6> *@
            <hr />
            <div class="card">
                <div class="card-body">
                    <div class="border p-4 rounded">
                        <!-- Start of form -->
                        <form action="@Url.Action(Model.AnnualMagazineId == 0 ? "CreateAnnualMagazine" : "UpdateAnnualMagazine", "Managers")" method="post">
                            <div class="card-title d-flex align-items-center">
                                <h5 class="mb-0">@ViewData["Title"] Date</h5>
                            </div>
                            <hr />
                            <input type="hidden" id="annualMagazine" name="annualMagazineId" value="@Model.AnnualMagazineId"> 
                            <!-- Name Input -->
                            <div class="row mb-3">
                                <label for="inputEnterArticleName" class="col-sm-3 col-form-label">
                                    Article
                                    name
                                </label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="inputEnterArticleName"
                                            name="title" placeholder="Enter Article name" value="@Model.Title">
                                </div>
                            </div>
                            <!-- Email Address Input -->
                            <div class="row mb-3">
                                <label for="inputEmailAddress2" class="col-sm-3 col-form-label">
                                    Email
                                    Address
                                </label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="inputEnterArticleName"
                                            name="academicYear" placeholder="Academic Year Ex. 2023-2024" value="@Model.AcademicYear">
                                </div>
                            </div>
                            <!-- Choose Password Input -->
                            <div class="row mb-3">
                                <label for="inputChooseDate2" class="col-sm-3 col-form-label">
                                    Submission Closure Date
                                </label>
                                <div class="col-sm-9">
                                    <input type="date" class="form-control" id="inputChooseDate2"
                                            name="submissionClosureDate" placeholder="Choose Date Time" value="@Model.SubmissionClosureDate?.ToString("yyyy-MM-dd")">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputChooseDate2" class="col-sm-3 col-form-label">
                                    Final Closure Date
                                </label>
                                <div class="col-sm-9">
                                    <input type="date" class="form-control" id="inputChooseDate2"
                                            name="finalClosureDate" placeholder="Choose Date Time" value="@Model.FinalClosureDate?.ToString("yyyy-MM-dd")">
                                </div>
                            </div>
                            @* radio button to change status. @Mode.IsStatus == Active or Disable *@
                            @if(@Model.IsActive != null){
                                <div class="row mb-3">
                                    <label for="inputChooseDate2" class="col-sm-3 col-form-label">
                                        Status
                                    </label>
                                    <div class="col-sm-9">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" id="active" name="isActive" value="True" @(Model.IsActive ? "checked" : "")>
                                            <label class="form-check-label" for="active">Active</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" id="disable" name="isActive" value="False" @(!Model.IsActive ? "checked" : "")>
                                            <label class="form-check-label" for="disable">Disable</label>
                                        </div>
                                    </div>
                                </div>
                            }
                            
                            <!-- Submit Button -->
                            <div class="row">
                                <label class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9">
                                    <button type="submit" class="btn btn-primary px-5">@ViewData["ButtonLabel"]</button>
                                </div>
                            </div>
                        </form>
                        <!-- End of form -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--end row-->
</main>