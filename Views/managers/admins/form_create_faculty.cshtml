@{
    Layout = "~/Views/Shared/_Layout_Manager_Table.cshtml";
}
<!--start content-->
<main class="page-content">
    <!--breadcrumb-->
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Forms</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a asp-controller="Managers" asp-action="Index"><i class="bx bx-home-alt"></i></a></li>
                    <li class="breadcrumb-item active"><a asp-controller="Managers" asp-action="TableFaculty">List Faculty</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"] Faculty </li>
                </ol>
            </nav>
        </div>
    </div>
    <!--end breadcrumb-->
    <div class="row">
        <div class="col-xl-9 mx-auto">
            <h6 class="mb-0 text-uppercase">@ViewData["Title"] Form</h6>
            <hr />
            <div class="card">
                <div class="card-body">
                    <div class="border p-4 rounded">
                        <!-- Start of form -->
                        <form action="@Url.Action(Model.FacultyId == 0 ? "CreateFaculty" : "UpdateFaculty", "Managers")" method="post">
                            <div class="card-title d-flex align-items-center">
                                <h5 class="mb-0">Faculty Registration</h5>
                            </div>
                            <hr />
                            <!-- Name Input -->
                            <input type="hidden" id="facultyId" name="facultyId" value="@Model.FacultyId"> 
                            <div class="row mb-3">
                                <label for="inputEnterArticleName" class="col-sm-3 col-form-label">
                                    Faculty
                                    Name
                                </label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="inputEnterArticleName"
                                            name="name" placeholder="Enter Faculty Name" value="@Model.Name">
                                </div>
                            </div>
                            <!-- Email Address Input -->
                            <div class="row mb-3">
                                <label for="inputEmailAddress2" class="col-sm-3 col-form-label">
                                    Dean Name
                                </label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="inputEmailAddress2"
                                            name="deanName" placeholder="Dean name" value="@Model.DeanName">
                                </div>
                            </div>
                            <!-- Address Input -->
                            <div class="row mb-3">
                                <label for="inputDescription4"
                                        class="col-sm-3 col-form-label">Description</label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" id="inputDescription4" name="description"
                                            rows="3" placeholder="Description">@Model.Description</textarea>
                                </div>
                            </div>
                            <!-- Submit Button -->
                            <div class="row">
                                <label class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9">
                                    <button type="submit" class="btn btn-primary px-5">@ViewData["ButtonLabel"]</button>
                                </div>
                            </div>
                        </form>
                        <!-- End of form -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--end row-->
</main>
<!--end page main-->