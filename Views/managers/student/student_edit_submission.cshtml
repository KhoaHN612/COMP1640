@model IEnumerable<COMP1640.Models.FileDetail>;

@{
    Layout = "~/Views/Shared/_Layout_Students_Submission.cshtml";
}

<main class="page-content student">
    <!--breadcrumb-->
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Forms</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a asp-controller="Students" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Validations</li>
                </ol>
            </nav>
        </div>
    </div>
    <!--end breadcrumb-->
    <div class="row">
        <div class="col-xl-10 mx-auto pt-lg-5">
            <h6 class="mb-0 text-uppercase">Edit submission</h6>
            <hr />
            <div class="card">
                <div class="card-body">
                    <div class="p-4 border rounded">
                        <label class="form-label" for="inputGroupFile01">Upload</label>
                        @{
                            foreach (var item in Model)
                            {
                                <form asp-controller="Students" asp-action="EditSubmission" enctype="multipart/form-data" class="row g-3 needs-validation" novalidate method="post">
                                    <div class="col-md-10">
                                        <div class="form-group file">
                                            <input type="file" name="newFile" class="form-control" required>
                                            <label for="newFile" class="form-label">@item.FilePath</label>
                                            <input type="hidden" name="id" value="@item.FileId">
                                            <div class="invalid-feedback">Please choose a file.</div>
                                        </div>
                                    </div>
                                    <div class="col-md-2 pb-5">
                                        <button id="submitBtn" class="btn btn-primary" type="submit">Replace</button>
                                    </div>
                                </form>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--end row-->
</main>
<script>
    function validateCheckbox() {
        var checkbox = document.getElementById('invalidCheck2');
        var submitBtn = document.getElementById('submitBtn');

        if (checkbox.checked) {
            submitBtn.disabled = false;
        } else {
            submitBtn.disabled = true;
        }
    }
    var currentDate = new Date().toISOString().slice(0, 10);
    document.getElementById('submissionDate').value = currentDate;
</script>