
@{
    Layout = "~/Views/Shared/_Layout_Students_Submission.cshtml";
}

<main class="page-content student">
    <!--breadcrumb-->
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Forms</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a asp-controller="Students" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Validations</li>
                </ol>
            </nav>
        </div>
    </div>
    <!--end breadcrumb-->
    <div class="row">
        <div class="col-xl-10 mx-auto pt-lg-5">
            <h6 class="mb-0 text-uppercase">Add new submission</h6>
            <hr />
            <div class="card">
                <div class="card-body">
                    <div class="p-4 border rounded">
                        <form class="row g-3">
                            <div class="col-md-4">
                                <label for="validationDefault01" class="form-label">Student ID</label>
                                <input type="text" class="form-control" id="validationDefault01" value="">
                            </div>
                            <div class="col-md-4">
                                <label for="validationDefault02" class="form-label">Student name</label>
                                <input type="text" class="form-control" id="validationDefault02" value="">
                            </div>
                            <div class="col-md-4">
                                <label for="validationDefaultUsername" class="form-label">Title</label>
                                <input type="text" class="form-control" id="validationDefaultUsername" aria-describedby="inputGroupPrepend2">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" for="inputGroupFile01">Upload</label>
                                <input type="file" class="form-control" id="inputGroupFile01">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Submission Date:</label>
                                <input type="date" class="form-control">
                            </div>
                            <div class="col-12">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
                                    <label class="form-check-label" for="invalidCheck2">Agree to terms and conditions</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary" type="submit">Submit form</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--end row-->
</main>

