@model List<COMP1640.Models.Contribution>
@{
    Layout = "~/Views/Shared/_Layout_Manager_Table.cshtml";
}
<!--start content-->
<main class="page-content">
    <!--breadcrumb-->
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Tables</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a asp-controller="Managers" asp-action="IndexManagers"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">List submission</li>
                </ol>
            </nav>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col d-flex justify-content-end">
            <button type="button" class="btn btn-info px-5">
                <i class="bi bi-cloud-arrow-down-fill"></i> Downloads
                All
            </button>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="example2" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Contribution ID</th>
                            <th>User ID</th>
                            <th>Annual Magazine</th>
                            <th>Title</th>
                            <th>Submission Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var contribution in Model)
                        {
                            <tr>
                                <td>@contribution.ContributionId</td>
                                <td>@contribution.UserId</td>
                                <td>@contribution.AnnualMagazine.Title</td>
                                <td>@contribution.Title</td>
                                <td>@contribution.SubmissionDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="table-actions d-flex align-items-center gap-3 fs-6">
                                        <a href="javascript:;" class="text-primary" data-bs-toggle="tooltip" data-bs-placement="bottom"
                                            title="Views"><i class="bi bi-eye-fill"></i></a>
                                        <a href="javascript:;" class="text-danger" data-bs-toggle="tooltip" data-bs-placement="bottom"
                                            title="Download"><i class="lni lni-download"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Contribution ID</th>
                            <th>User ID</th>
                            <th>Annual Magazine</th>
                            <th>Title</th>
                            <th>Submission Date</th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</main>
<!--end page main-->

